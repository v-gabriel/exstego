<ChooseEmbedOptionPage>:
    name: "chooseEmbedOptionPage"
    MDBoxLayout:
        padding: 40
        spacing: 40
        orientation: "vertical"
        MDBoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.1
            MDLabel:
                size_hint: 0.9, 1
                font_size: app.title1_size
                markup: True
                text: "Embed options"
            MDIcon:
                color: app.sea_green_color
                font_size: app.title1_size
                size_hint: 0.1, 1
                icon: "data-matrix-edit"
                halign: "right"

        # options, left
        MDBoxLayout:
            orientation: "horizontal"
            spacing: 40
            size_hint: 1, 0.8

            # title
            AnchorLayout:
                BoxLayout:
                    orientation: "vertical"
                    spacing: 10
                    MDLabel:
                        size_hint: 1, 0.1
                        markup: True
                        text: "Select embed option"
                        font_size: app.title2_size
                    ScrollView:
                        size_hint: 1, 0.9
                        do_scroll_x: False
                        do_scroll_y: True
                        MDList:
                            id: embedOptionsList

            # description, right
            AnchorLayout:
                MDBoxLayout:
                    spacing: 30
                    orientation: "vertical"
                    MDLabel:
                        size_hint: 1, 0.1
                        markup: True
                        text: "Description"
                        font_size: app.title2_size
                    MDGridLayout:
                        cols: 1
                        size_hint: 1, 0.9
                        MDLabel:
                            text_size: self.size
                            line_height: app.description_line_height
                            halign:'left'
                            valign:'top'
                            id: embedOptionInfo
                            markup: True
                            text: "No option selected."

        # navigation
        MDBoxLayout:
            size_hint: 1, 0.1
            AnchorLayout:
                anchor_x: "left"
                MDFlatButton:
                    markup: True
                    text: "[color=0EBE78]Back[/color]"
                    on_release: root.go_back()
                    size: 30, 30
                    size_hint: None, None
            AnchorLayout:
                anchor_x: "right"
                MDRaisedButton:
                    text: "Next"
                    on_release: root.go_to_embed_option_page()
                    size: 30, 30
                    size_hint: None, None
                    md_bg_color: app.sea_green_color
